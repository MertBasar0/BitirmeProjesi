@model Entities.Concrete.Dto_s.AssignedRoleDTO

<div class="container text-center">
  <div class="row">
    <div class="col">
      <h5 class="card-title" style ="background-color:aquamarine">Yetkisi Olan Kullanıcılar</h5>
      <table class="table">
            <form asp-action="AssignedRole">
                <button type="submit" class="btn btn-primary">
                    
                        @{
                            string title;
                            if (Model.RoleName.ToLower().StartsWith("ban") || Model.RoleName.ToLower().EndsWith("ban"))
                            {
                                title = "Banı Kaldır";
                            }
                            else
                            {
                                title = "Yetkiyi Kaldır";
                            }
                        }
                        @title
                </button>
            <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">User Name</th>
              <th scope="col">Email</th>
              <th scope="col">Transactions</th>
            </tr>
          </thead>
          <tbody>
                @foreach (AppUser item in Model.HasRoles)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td><input type="checkbox" name="DeletedIds"  value="@item.Id"></input></td>
                            <td><input type="hidden" asp-for="RoleName" value=@Model.RoleName></input></td>
                        </tr>
                     }
          </tbody>
          </form>
        </table>
    </div>
    <div class="col">
              <h5 class="card-title" style = "background-color:red">Yetkisi Olmayan Kullanıcılar</h5>
       <table class="table">
            <form asp-action="AssignedRole">
                <button type="submit" class="btn btn-primary">
                    
                    @{
                            string title;
                            if (Model.RoleName.ToLower().StartsWith("ban") || Model.RoleName.ToLower().EndsWith("ban"))
                            {
                                title = "Banla";
                            }
                            else
                            {
                                title = "Yetkilendir";
                            }
                        }
                        @title
                    
                
                </button>
            <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">User Name</th>
              <th scope="col">Email</th>
              <th scope="col">Transactions</th>
            </tr>
          </thead>
          <tbody>
                @foreach (AppUser item in Model.HasNotRoles)
                {
                   <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td><input type="checkbox" value="@item.Id" name="AddIds"></input></td>
                     <td><input type="hidden" asp-for="RoleName" value=@Model.RoleName></input></td>
                   </tr>
                }
          </tbody>
          </form>
        </table>
        
    </div>
  </div>
  <div class="row">
    <div class="col">
      1 of 3
    </div>
    <div class="col">
      2 of 3
    </div>
    <div class="col">
      3 of 3
    </div>
  </div>
</div>

